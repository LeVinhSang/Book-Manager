<html lang="en">
    <head>
        <title>Book-Manager</title>
        <meta charset="UTF-8">
    </head>

    <body>
        <header>
            <h2>Book-Manager</h2>
        </header>
        <nav>
            <form>
                <a href="/">Home</a> |
                <a href="/books">Books</a> |
                <a href="#">Publishers</a>
            </form>

            <form method="get" action="/search-basic">
                <input name="keyword" placeholder="Search">
                <button type="submit">Search</button>
            </form>

        </nav>

        <section>
            <small>
                <h2>{{book.getTitle()}}</h2>
            </small>
            <small>
                {{book.getAuthor()}}
            </small> |
            <small>
                {{book.getPublisher().getName()}}
            </small> |
            <small>
                {{book.getPrice()}}
            </small>
        </section>
    </body>

</html>