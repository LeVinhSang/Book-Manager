<html lang="en">
    <head>
        <title>Book-Manager</title>
        <meta charset="UTF-8">
    </head>

    <body>
        <header>
            <h2>Book-Manager</h2>
        </header>

        <nav>
            <form>
                <a href="/">Home</a> |
                <a href="/books">Books</a>
            </form>

            <form method="get" action="/search-basic">
                <input name="keyword" placeholder="Search">
                <button type="submit">Search</button>
            </form>

            <form method="post" action="/edit/{{book.getId()}}">
                <input type="hidden" name="_method" value="PUT"/>
                <input name="title" value="{{book.getTitle()}}" placeholder="Title">
                <input name="author" value="{{book.getAuthor()}} " placeholder="Author">
                <label for="publisher">Publisher</label>
                <select id="publisher" name="publisher_id">
                    <option value="">Null</option>
                    {% for publisher in publishers %}
                    {% if book.getPublisher().getId() == publisher.getId() %}
                    <option value="{{book.getPublisher().getId()}}" selected>{{book.getPublisher().getName()}}</option>
                    {% else %}
                    <option value="{{publisher.getId()}}">{{publisher.getName()}}</option>
                    {% endif %}
                    {% endfor %}
                </select>
                <input name="price" value="{{book.getPrice()}}" placeholder="price">
                <button type="submit">Edit</button>
            </form>
        </nav>
    </body>
</html>